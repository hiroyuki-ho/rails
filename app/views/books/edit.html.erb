<div class="edit-container">
<h2 class="edit-title">Editing Book</h2>


<%= form_for(@book, url:"/books/#{@book.id}") do |f| %>

 <% if @book.errors.any? %>
  <div class="error_message">
        	<h2>2 errors</h2>
	    <ul>
	      <% @book.errors.full_messages.each do |message| %>
	        <li><%= message %></li>
	      <% end %>
	    </ul>
  </div>
<% end %>

    <h4>Title</h4>
    <div class="edit-field"><%= f.text_field :title %></div>
    <h4>Body</h4>
    <div class="edit-area"><%= f.text_area :body %></div>
    <div class="edit-submit"><%= f.submit 'Update Book' %></div>
<% end %>


<%= link_to "Show", "/books/#{@book.id}" %>
<%= link_to "Back", "/books" %>
</div>